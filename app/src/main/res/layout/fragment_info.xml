<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.InfoFragment">


    <ImageView
        android:id="@+id/league_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="270dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#90EE90	"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/league_image">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/stage"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#228B22"
                android:text="Tour:"
                android:textColor="#FFFDFD"
                android:textSize="20dp">

            </TextView>

            <TextView
                android:id="@+id/venue"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#228B22"
                android:text="Venue"
                android:textColor="#F6F4F4"
                android:textSize="20dp">


            </TextView>

            <TextView
                android:id="@+id/city"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#228B22"
                android:text="city"
                android:textColor="#F6F5F5"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/toss"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#228B22"
                android:text="Toss Result"
                android:textColor="#FFFDFD"
                android:textSize="20dp">

            </TextView>

            <TextView
                android:id="@+id/league_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#228B22"
                android:text="League_name"
                android:textColor="#F6F6F6"
                android:textSize="20dp">

            </TextView>

            <TextView
                android:id="@+id/mom"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#228B22"
                android:text="Man of the Match"
                android:textColor="#FDFCFC"
                android:textSize="20sp">

            </TextView>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>